<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/theme" />
            <stroke android:width="1dp" android:color="@color/theme" />
            <corners android:topRightRadius="@dimen/margin_8"
                android:bottomRightRadius="@dimen/margin_8"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_transparent" />
            <stroke android:width="1dp" android:color="@color/theme" />
            <corners android:topRightRadius="@dimen/margin_8"
                android:bottomRightRadius="@dimen/margin_8"/>
        </shape>
    </item>

</selector>