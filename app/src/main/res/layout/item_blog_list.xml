<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="4dp"
    android:layout_marginEnd="4dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">


    <android.support.v7.widget.CardView
        android:id="@+id/id_card_layout"
        android:layout_width="@dimen/margin_230"
        android:layout_height="@dimen/margin_100"
        android:background="?attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/blog_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="News Image"
            android:scaleType="fitXY"
            android:background="@drawable/placeholder"
            android:src="@drawable/placeholder" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="@dimen/margin_230"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_3"
        android:paddingLeft="@dimen/margin_4"
        android:paddingRight="@dimen/margin_3"
        android:paddingStart="@dimen/margin_4">

        <TextView
            android:id="@+id/blog_title"
            fontPath="fonts/FiraSans-Light.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gray_500"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/blog_category"
            fontPath="fonts/FiraSans-Light.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_title"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_3"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_600"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>