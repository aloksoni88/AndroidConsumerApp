        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/tantative_layout_view"
            android:background="@drawable/blur_imag_layout"/>
        <Button
        android:id="@+id/id_layout_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="fonts/FiraSans-Light.ttf"
        android:layout_gravity="center"
        android:background="@drawable/cir_white_with_redborder_bg"
        android:minHeight="@dimen/margin_35"
        android:paddingLeft="@dimen/margin_25"
        android:paddingRight="@dimen/margin_25"
        android:text="Request for Layout Plans"
