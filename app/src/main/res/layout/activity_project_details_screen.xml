            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_virtual_tour_view"
            android:src="@drawable/ic_indoor_view"/>
    </LinearLayout>
