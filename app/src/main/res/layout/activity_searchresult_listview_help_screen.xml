<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/overlay_color"
              android:id="@+id/searchview_helpscreen_layout">
        <RelativeLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_theme"
                android:padding="10dp"
                android:src="@drawable/filter_icon" />
            <View android:layout_width="@dimen/margin_1"
                  android:id="@+id/vertical_line"
                  android:layout_below="@+id/filter"
                  android:layout_alignBaseline="@+id/filter"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="40dp"
                  android:layout_height="@dimen/margin_30"
                  android:background="@color/colorWhite"/>
            <View android:layout_width="@dimen/margin_7"
                  android:layout_height="@dimen/margin_7"
                  android:id="@+id/dot"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="38dp"
                  android:layout_below="@+id/vertical_line"
                  android:background="@drawable/circle_background"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="Filter options"
                      android:layout_marginRight="@dimen/margin_10"
                      android:layout_marginTop="@dimen/margin_5"
                      android:textColor="@color/colorWhite"
                      fontPath = "fonts/FiraSans-Regular.ttf"
                      android:layout_toLeftOf="@+id/vertical_line"
                      android:layout_above="@+id/dot"
                      tools:ignore="MissingPrefix"
                      android:textSize="@dimen/text_size_large"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/margin_45"
                       android:layout_gravity="center_horizontal"
                    android:background="@drawable/swipe_icon"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="bottom|end"
                          android:layout_marginBottom="4dp"
                          android:layout_marginRight="@dimen/activity_horizontal_margin"
                          android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Tap to view map page"
                          android:textColor="@color/colorWhite"
                          fontPath = "fonts/FiraSans-Regular.ttf"
                          android:layout_gravity="center_vertical"
                          tools:ignore="MissingPrefix"
                          android:textSize="@dimen/text_size"/>
                <View android:layout_width="@dimen/margin_7"
                      android:layout_height="@dimen/margin_7"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="@dimen/margin_7"
                      android:background="@drawable/circle_background"/>
                <View android:layout_width="@dimen/margin_60"
                      android:layout_height="@dimen/margin_1"
                      android:layout_gravity="center_vertical"
                      android:background="@color/colorWhite"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fragment_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape"
                    app:fabSize="normal" />
            </LinearLayout>

        </FrameLayout>
    <TextView android:layout_width="match_parent"
              android:background="@color/overlay_color"
              android:layout_height="60dp"
              android:gravity="center"
              android:text="TAP TO DISMISS"
              android:textColor="@color/red_500"
              fontPath = "fonts/FiraSans-Regular.ttf"
              android:layout_gravity="center_vertical"
              tools:ignore="MissingPrefix"
              android:textSize="@dimen/text_size_large"/>
</LinearLayout>