<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:ignore="MissingPrefix">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:gravity="center_horizontal"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:id="@+id/apartmentLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="33">

        <ImageView
            android:id="@+id/apartment_image"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:src="@drawable/ic_filter_apartment_black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/apartment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/apartment"
            android:textSize="@dimen/text_size_small"
            fontPath ="fonts/FiraSans-Light.ttf"
            android:layout_margin="5dp" />

        <View
            android:id="@+id/apartment_selector_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/filter_red"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/villaLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="34"
        >
        <ImageView
            android:id="@+id/villa_image"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            app:srcCompat="@drawable/ic_filter_villa_black"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/villa_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/villa"
            android:textSize="@dimen/text_size_small"
            android:layout_margin="5dp"
            fontPath ="fonts/FiraSans-Light.ttf"/>

        <View
            android:id="@+id/villa_selector_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/filter_red"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/plotLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="33"
        >
        <ImageView
            android:id="@+id/plot_image"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            app:srcCompat="@drawable/ic_filter_plot_black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/plot_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/plots"
            android:textSize="@dimen/text_size_small"
            android:layout_margin="5dp"
            fontPath ="fonts/FiraSans-Light.ttf" />

        <View
            android:id="@+id/plot_selector_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/filter_red"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:ignore="MissingPrefix">
    <LinearLayout
        android:id="@+id/commercialLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="33"
        >
        <ImageView
            android:id="@+id/commercial_image"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            app:srcCompat="@drawable/ic_filter_commercial_black"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/commercial_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/commercial"
            android:textSize="@dimen/text_size_small"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            fontPath ="fonts/FiraSans-Light.ttf" />

        <View
            android:id="@+id/commercial_selector_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/filter_red"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/floorLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layout_weight="34"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/floor_image"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:src="@drawable/ic_filter_floor_black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/floor_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/independent_floor"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            fontPath ="fonts/FiraSans-Light.ttf"
            android:layout_margin="5dp" />

        <View
            android:id="@+id/floor_selector_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/filter_red"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:visibility="invisible"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>