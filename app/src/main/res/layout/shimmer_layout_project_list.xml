<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="@dimen/margin_2"
            app:cardUseCompatPadding="true">

            <com.clicbrics.consumer.customview.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:riv_corner_radius="4dp"
                app:riv_mutate_background="true"
                app:scaled="true" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="@dimen/margin_2"
            app:cardUseCompatPadding="true">

            <com.clicbrics.consumer.customview.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:riv_corner_radius_top_left="4dp"
                app:riv_corner_radius_bottom_left="4dp"
                app:riv_mutate_background="true"
                app:scaled="true" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_280"
        android:layout_height="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_3"
        android:layout_marginLeft="@dimen/margin_12"
        android:background="@color/gray_500" />

    <View
        android:layout_width="@dimen/margin_250"
        android:layout_height="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_12"
        android:background="@color/gray_500" />

    <View
        android:layout_width="@dimen/margin_270"
        android:layout_height="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_12"
        android:background="@color/gray_500" />

    <View
        android:layout_width="@dimen/margin_150"
        android:layout_height="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_12"
        android:background="@color/gray_500" />

    <View
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_12"
        android:background="@color/gray_500" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/gray_600" />
</LinearLayout>