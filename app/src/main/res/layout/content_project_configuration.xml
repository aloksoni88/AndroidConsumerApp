<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix"
    android:background="@color/screen_bg_color">

    <TextView
        android:id="@+id/amenities_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurations"
        android:textColor="@color/black"
        fontPath ="fonts/FiraSans-Book.ttf"
        android:textSize="16sp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="10dp"
        android:paddingLeft="@dimen/detail_horizontal_margin"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/configuration_more_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/price_on_request_text_selector"
        fontPath ="fonts/FiraSans-Medium.ttf"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/detail_horizontal_margin"
        android:paddingRight="@dimen/detail_horizontal_margin"
        android:paddingBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="View All"
        android:layout_above="@+id/amenities_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/configuration_list"
        android:layout_below="@id/amenities_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/detail_horizontal_margin"
        android:paddingRight="@dimen/detail_horizontal_margin"/>

</RelativeLayout>