<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_15"
    app:cardBackgroundColor="@color/gray_300"
    app:cardElevation="@dimen/margin_2"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/margin_3"
    app:contentPadding="@dimen/margin_10">

    <RelativeLayout
        android:background="@drawable/cardview_selector_bg_lightdark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_paid_amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text=""
            android:textColor="@color/text_color_login_reg"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/id_payment_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_paid_amount_value"
            android:layout_marginTop="@dimen/margin_10"
            android:text=""
            android:textColor="@color/gray_500"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/id_payment_history_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:background="@drawable/due_button_selector_bg"
            android:paddingBottom="@dimen/margin_3"
            android:paddingLeft="@dimen/margin_12"
            android:paddingRight="@dimen/margin_12"
            android:paddingTop="@dimen/margin_3"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/red_dark"
            android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>