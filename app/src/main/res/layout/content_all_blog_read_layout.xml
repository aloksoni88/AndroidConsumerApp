<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/id_image"
                android:background="@drawable/all_blog_read_icon"
                   android:layout_marginTop="120dp"
                android:layout_centerHorizontal="true"/>

    <TextView
        fontPath="fonts/FiraSans-Light.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_awesome_txt"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/id_image"
        android:text="Awesome!"
        android:textColor="@color/placeholder"
        android:textSize="26sp" tools:ignore="MissingPrefix"/>

    <TextView
        fontPath="fonts/FiraSans-Light.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_all_list_read_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_below="@+id/id_awesome_txt"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" tools:ignore="MissingPrefix"/>
</RelativeLayout>