<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:ignore="MissingPrefix" >

    <TextView
        android:id="@+id/payment_plan_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Plans"
        android:textColor="@color/black"
        fontPath ="fonts/FiraSans-Book.ttf"
        android:textSize="16sp"
        android:paddingLeft="@dimen/detail_horizontal_margin"/>

    <TextView
        android:id="@+id/view_all_payyment_plans"
        fontPath="fonts/FiraSans-Medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/detail_horizontal_margin"
        android:text="View All"
        android:textColor="@drawable/price_on_request_text_selector"
        android:textSize="12sp"
        android:paddingRight="@dimen/detail_horizontal_margin"
        android:layout_alignBaseline="@id/payment_plan_txt"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/payment_plan_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_plan_txt"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</RelativeLayout>